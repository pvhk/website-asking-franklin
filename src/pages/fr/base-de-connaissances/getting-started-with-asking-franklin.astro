---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { KnowledgeArticle } from '@/pages/_KnowledgeArticle';
import { getContent } from '@/lib/i18n';

const lang = 'fr';
const content = getContent(lang);
const article = content.knowledgeBase.articles[0];
---

<BaseLayout
  lang={lang}
  metaTitle={`${article.title} - ${content.siteName}`}
  metaDescription={article.excerpt}
  currentPath="/fr/base-de-connaissances/getting-started-with-asking-franklin"
>
  <KnowledgeArticle lang={lang} client:load />
</BaseLayout>

